{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/froiloc/WebAssistentForensics/schema/section-metadata.schema.json",
  "title": "WebAssistentForensics Section JSON-LD Metadata",
  "description": "Schema for validating JSON-LD metadata in Section HTML files",
  "type": "object",
  "required": [
    "@context",
    "@type",
    "identifier",
    "name",
    "description",
    "inLanguage",
    "learningResourceType"
  ],
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org",
      "description": "JSON-LD Context (immer schema.org)"
    },
    "@type": {
      "type": "string",
      "const": "LearningResource",
      "description": "Schema.org Typ (immer LearningResource)"
    },
    "identifier": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "description": "Section-ID (eindeutig im Projekt, lowercase mit Bindestrichen)"
    },
    "name": {
      "type": "string",
      "minLength": 15,
      "maxLength": 100,
      "description": "Section-Titel (deutscher Name)"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "maxLength": 400,
      "description": "Kurzbeschreibung der Section (2-3 Sätze)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Versions-Nummer der Section (SemVer, z.B. 1.0.0)"
    },
    "dateCreated": {
      "type": "string",
      "format": "date",
      "description": "Erstellungsdatum (YYYY-MM-DD)"
    },
    "dateModified": {
      "type": "string",
      "format": "date",
      "description": "Letzte Änderung (YYYY-MM-DD)"
    },
    "author": {
      "type": "object",
      "required": ["@type", "name", "email"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "Organization"
        },
        "name": {
          "type": "string",
          "description": "Name des Erstellers (KI oder Person)"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Kontakt-Email"
        }
      }
    },
    "inLanguage": {
      "type": "string",
      "pattern": "^de(-[A-Z]{2})?$",
      "description": "Sprache der Section (ISO 639-1, z.B. 'de' oder 'de-DE')"
    },
    "audience": {
      "type": "object",
      "required": ["@type", "audienceType"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "EducationalAudience"
        },
        "audienceType": {
          "type": "string",
          "description": "Zielgruppe (z.B. 'IT-ferne Polizei-Ermittler')"
        }
      }
    },
    "educationalLevel": {
      "type": "string",
      "enum": ["Beginner", "Intermediate", "Advanced"],
      "description": "Bildungsniveau / Schwierigkeitsgrad"
    },
    "learningResourceType": {
      "type": "string",
      "const": "Guide",
      "description": "Typ der Lernressource (immer 'Guide' für Sections)"
    },
    "timeRequired": {
      "type": "string",
      "pattern": "^PT\\d+M$",
      "description": "Geschätzte Lesedauer (ISO 8601 Duration, z.B. 'PT5M' für 5 Minuten)"
    },
    "difficultyLevel": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Komplexität der Section"
    },
    "isPartOf": {
      "type": "object",
      "required": ["@type", "identifier", "name"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "Chapter"
        },
        "identifier": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "teaches": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Key Topics die gelehrt werden"
    },
    "about": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "SoftwareApplication"
        },
        "name": {
          "type": "string"
        },
        "softwareVersion": {
          "type": "string"
        }
      }
    },
    "requires": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
      },
      "description": "Prerequisites (Section-IDs)"
    },
    "predecessor": {
      "oneOf": [
        {"type": "string", "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"},
        {"type": "null"}
      ],
      "description": "Vorgänger-Section ID"
    },
    "successor": {
      "oneOf": [
        {"type": "string", "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"},
        {"type": "null"}
      ],
      "description": "Nachfolger-Section ID"
    },
    "relatedLink": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["@type", "url", "name"],
        "properties": {
          "@type": {
            "type": "string",
            "const": "LinkRole"
          },
          "url": {
            "type": "string",
            "pattern": "^#[a-z][a-z0-9]*(-[a-z0-9]+)*$"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "description": "Cross-References zu anderen Sections"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["term", "language"],
        "properties": {
          "term": {
            "type": "string",
            "minLength": 1
          },
          "language": {
            "type": "string",
            "pattern": "^[a-z]{2}$"
          },
          "status": {
            "type": "string",
            "enum": ["approved", "pending", "deprecated"]
          }
        }
      },
      "description": "Terminologie-Tags für die Section"
    }
  }
}
